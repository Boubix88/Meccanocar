<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Theme clair -->
    <style name="Theme_MeccanocarLight" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_100</item>
        <item name="colorPrimaryVariant">@color/green_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Couleurs -->
        <item name="colorOnBackgroundCard">#FFFFFF</item>
        <item name="colorBackground">#FFFFFF</item>
        <item name="textColor">#353535</item>
    </style>

    <!-- Theme sombre -->
    <style name="Theme_MeccanocarDark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_100</item>
        <item name="colorPrimaryVariant">@color/green_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#333333</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->

        <!-- Couleurs -->
        <item name="colorOnBackgroundCard">#3C3C3C</item>
        <item name="colorBackground">#333333</item>
        <item name="textColor">#EAEAEA</item>
    </style>



    <style name="defaultTextView"  parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyCardViewStyle">
        <item name="android:radius">8dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:background">@color/text_primary</item>
    </style>

    <style name="frag1TableLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stretchColumns">* <!-- ceci Ã©tend toutes les colonnes --></item>
        <item name="android:shrinkColumns">*</item>
    </style>

    <style name="frag1HeaderTableRow" parent="frag1TableLayout">
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="frag1TableRow" parent="frag1TableLayout">
    </style>

    <style name="frag1Col" parent="defaultTextView">
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@drawable/tableborder</item>
        <item name="android:gravity">center</item> <!-- Ajout pour centrer le texte -->
    </style>

    <style name="frag1HeaderCol" parent="frag1Col">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@drawable/tableBorderHeaderRef</item>
        <item name="android:gravity">center</item> <!-- Ajout pour centrer le texte -->
    </style>

    <style name="frag2TableLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stretchColumns">*</item>
        <item name="android:shrinkColumns">*</item>
        <item name="android:layout_margin">5dp</item>

    </style>

    <style name="frag2TableRow" parent="frag2TableLayout">
        <item name="android:background">#ccc</item>
    </style>

    <style name="frag2Col" parent="defaultTextView">
        <item name="android:background">#ffffff</item>
    </style>

    <style name="frag2HeaderCol" parent="frag2Col">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">1dp</item>
    </style>
    <style name="frag2ColImpair" parent="frag2Col">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="frag2ColImpair1" parent="frag2ColImpair">
        <item name="android:layout_marginRight">1dp</item>
    </style>
    <style name="frag2ColPair" parent="frag2ColImpair">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>
    <style name="frag2ColPair1" parent="frag2ColPair">
        <item name="android:layout_marginRight">1dp</item>
    </style>

    <style name="frag3HeaderCol" parent="frag2Col">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
    </style>

    <drawable name="tableborderHeader" />
</resources>